{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ]
}


